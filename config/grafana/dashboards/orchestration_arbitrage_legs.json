{
  "dashboard": {
    "id": null,
    "title": "Orchestration - Arbitrage Legs",
    "tags": [
      "orchestration",
      "arbitrage",
      "legs",
      "trading"
    ],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Arbitrage Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(arb_legs_success_total[5m]) / (rate(arb_legs_success_total[5m]) + rate(arb_legs_fail_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.7
                },
                {
                  "color": "green",
                  "value": 0.9
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Legs by Status",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(arb_legs_success_total[1m])",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "increase(arb_legs_fail_total[1m])",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "increase(arb_legs_hedge_total[1m])",
            "legendFormat": "Hedged",
            "refId": "C"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Arbitrage P&L",
        "type": "graph",
        "targets": [
          {
            "expr": "arb_pnl_realized",
            "legendFormat": "Realized P&L",
            "refId": "A"
          },
          {
            "expr": "arb_pnl_unrealized",
            "legendFormat": "Unrealized P&L",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "P&L (USDT)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Cross-Venue Execution Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, arb_execution_time_seconds)",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, arb_execution_time_seconds)",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Failed Legs by Reason",
        "type": "piechart",
        "targets": [
          {
            "expr": "increase(arb_legs_fail_total[1h])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Auto-Hedge Events",
        "type": "table",
        "targets": [
          {
            "expr": "arb_legs_hedge_total",
            "format": "table",
            "legendFormat": "{{venue_pair}} - {{symbol}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "15s",
    "annotations": {
      "list": [
        {
          "name": "Hedge Missed",
          "datasource": "prometheus",
          "expr": "arb_hedge_missed_events",
          "textFormat": "Hedge missed: {{venue_pair}} - {{symbol}}",
          "titleFormat": "Hedge Alert"
        },
        {
          "name": "High Slippage",
          "datasource": "prometheus",
          "expr": "arb_slippage_pct > 0.5",
          "textFormat": "High slippage: {{venue_pair}} ({{slippage}}%)",
          "titleFormat": "Slippage Alert"
        }
      ]
    }
  },
  "title": "Orchestration Arbitrage Legs",
  "uid": "orchestration-arbitrage-legs"
}